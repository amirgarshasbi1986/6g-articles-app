<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>6G Workgroup MCI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/static/app.css" rel="stylesheet">
</head>
<body>
  <div class="banner-container">
    <img src="/static/banner.jpg" alt="Banner" class="banner-image">
    <div class="banner-overlay">
      <div class="banner-title-left banner-title">
        <h1>6G Workgroup MCI</h1>
      </div>
      <nav class="banner-nav-right">
        <ul class="nav-list">
          <li><a href="/">Home</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/videos">Videos</a></li>
          <li><a href="/podcasts">Podcasts</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <main class="container mt-4">
    <h1>{{ video.title }}</h1>
    <div class="video-container">
      <video controls>
        <source src="/videos/{{ media_week }}/{{ video.video_path }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
    <h2>Summary</h2>
    <p>{{ video.summary_long }}</p>
    <div class="text-end mt-3">
      <a href="{{ video.article_link }}" class="btn btn-primary">Read Article</a>
      {% if video.pdf_path %}
        <a href="/videos/{{ media_week }}/{{ video.pdf_path }}" download class="btn btn-secondary ms-2">Download PDF</a>
      {% endif %}
    </div>
  </main>

  <section class="container mt-4">
    <h2>Other Videos</h2>
    {% if other_videos %}
      <ul class="list-group">
        {% for other in other_videos %}
          <li class="list-group-item"><a href="/videos/{{ selected_week }}/{{ other.id }}">{{ other.title }}</a></li>
        {% endfor %}
      </ul>
    {% else %}
      <p>No other videos for this week</p>
    {% endif %}
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
