<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>6G Workgroup MCI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/static/app.css" rel="stylesheet">
</head>
<body>
  <div class="banner-container">
    <img src="/static/banner.jpg" alt="Banner" class="banner-image">
    <div class="banner-overlay">
      <div class="banner-title-left banner-title">
        <h1>6G Workgroup MCI</h1>
      </div>
      <nav class="banner-nav-right">
        <ul class="nav-list">
          <li><a href="/">Home</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/videos">Videos</a></li>
          <li><a href="/podcasts">Podcasts</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <div class="container mt-4">
    <h2>Videos</h2>
    {% for video in videos %}
      <div class="row mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><a href="/videos/{{ video_week }}/{{ video.id }}">{{ video.title }}</a></h5>
              <p class="card-text">{{ video.summary }}</p>
              <div class="video-container">
                <video controls preload="metadata">
                  <source src="/videos/{{ video_week }}/{{ video.video_path }}" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </div>
              <a href="/videos/{{ video_week }}/{{ video.id }}" class="btn btn-primary mt-2">View Details</a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

    <h2>Podcasts</h2>
    <div class="row">
      {% for podcast in podcasts %}
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><a href="/podcasts/{{ podcast_week }}/{{ podcast.id }}">{{ podcast.title }}</a></h5>
              <p class="card-text">{{ podcast.summary }}</p>
              <audio controls preload="metadata" class="d-block mx-auto">
                <source src="/podcasts/{{ podcast_week }}/{{ podcast.path }}" type="audio/mpeg">
                Your browser does not support the audio tag.
              </audio>
              <a href="/podcasts/{{ podcast_week }}/{{ podcast.id }}" class="btn btn-primary mt-2">View Details</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <h2>Articles</h2>
    <div class="row">
      {% for article in articles %}
        <div class="col-md-3 mb-3">
          <div class="article-card card">
            <h5 class="card-title"><a href="{{ article.link }}">{{ article.title }}</a></h5>
            <p class="card-text">{{ article.summary[:150] }}...</p>
            <div class="text-end">
              <a href="{{ article.link }}" class="btn btn-primary">Read Article</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
