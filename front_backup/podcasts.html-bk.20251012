<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>6G Workgroup MCI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/static/app.css" rel="stylesheet">
</head>
<body>
  <div class="banner-container">
    <img src="/static/banner.jpg" alt="Banner" class="banner-image">
    <div class="banner-overlay">
      <div class="banner-title-left banner-title">
        <h1>6G Workgroup MCI</h1>
      </div>
      <nav class="banner-nav-right">
        <ul class="nav-list">
          <li><a href="/">Home</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/videos">Videos</a></li>
          <li><a href="/podcasts">Podcasts</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <main class="container mt-4">
    <h2>Select Week</h2>
    {% if weeks %}
      <form method="get">
        <select name="week" class="form-select mb-4" onchange="this.form.submit()">
          {% for week in weeks %}
            <option value="{{ week }}" {% if week == selected_week %}selected{% endif %}>{{ week }}</option>
          {% endfor %}
        </select>
      </form>
    {% else %}
      <p>No weeks available</p>
    {% endif %}

    <h2>Podcasts for Week {{ selected_week }}</h2>
    {% if podcasts %}
      <div class="row">
        {% for podcast in podcasts %}
          <div class="col-md-6 mb-4">
            <div class="card h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><a href="/podcasts/{{ selected_week }}/{{ podcast.id }}">{{ podcast.title }}</a></h5>
                <p class="card-text">{{ podcast.summary_short }}</p>
                <audio controls class="mt-2">
                  <source src="/podcasts/{{ media_week }}/{{ podcast.path }}" type="audio/mpeg">
                  Your browser does not support the audio tag.
                </audio>
                <a href="/podcasts/{{ selected_week }}/{{ podcast.id }}" class="btn btn-primary mt-auto">Read Article</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>No podcasts available for week {{ selected_week }}</p>
    {% endif %}
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
