<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>6G Workgroup MCI - Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="{{ url_for('static', filename='app.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <!-- Banner -->
  <div class="banner-container">
    <img src="{{ url_for('static', filename='banner.jpg') }}" alt="6G Workgroup MCI Banner" class="banner-image">
    <div class="banner-overlay">
      <div class="banner-title-left">
        <h1>6G Workgroup MCI</h1>
      </div>
      <nav class="banner-nav-right">
        <ul class="nav-list">
          <li><a href="/" class="active">Home</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/videos">Videos</a></li>
          <li><a href="/podcasts">Podcasts</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <div class="container mt-4">
    <!-- Videos Section -->
    <div class="row mb-4">
      <div class="col-12">
        <h2>Videos</h2>
        {% for video in videos %}
          <div class="row mb-3">
            <div class="col-12">
              <div class="card">
                <div class="card-body d-flex flex-column align-items-center">
                  <h5 class="card-title">{{ video.title }}</h5>
                  <p class="card-text">{{ video.summary }}</p>
                  <div class="video-container">
                    <video controls onplay="incrementPlay('video', '{{ video.id }}')">
                      <source src="/videos/main/{{ video.video_path }}" type="video/mp4">
                      Your browser does not support the video tag.
                    </video>
                  </div>
                  <div class="d-flex align-items-center mt-2">
                    <span class="me-3"><i class="fas fa-play text-success fa-xs"></i> {{ video.play_count }}</span>
                    <button class="like-btn btn btn-outline-primary me-2" data-type="video" data-id="{{ video.id }}">
                      <i class="{{ 'fas' if video.user_liked else 'far' }} fa-thumbs-up"></i> <span class="like-count">{{ video.likes }}</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Podcasts Section -->
    <div class="row mb-4">
      <div class="col-12">
        <h2>Podcasts</h2>
        <div class="row">
          {% for podcast in podcasts %}
            <div class="col-md-6 mb-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">{{ podcast.title }}</h5>
                  <p class="card-text">{{ podcast.summary }}</p>
                  <audio controls class="w-100" onplay="incrementPlay('podcast', '{{ podcast.id }}')">
                    <source src="/podcasts/main/{{ podcast.path }}" type="audio/mpeg">
                    Your browser does not support the audio tag.
                  </audio>
                  <div class="d-flex align-items-center mt-2">
                    <span class="me-3"><i class="fas fa-play text-success fa-xs"></i> {{ podcast.play_count }}</span>
                    <button class="like-btn btn btn-outline-primary me-2" data-type="podcast" data-id="{{ podcast.id }}">
                      <i class="{{ 'fas' if podcast.user_liked else 'far' }} fa-thumbs-up"></i> <span class="like-count">{{ podcast.likes }}</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Articles Section -->
    <div class="row">
      <div class="col-12">
        <h2>Articles</h2>
        <div class="row">
          {% for article in articles %}
            <div class="col-md-3 mb-3">
              <div class="card h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                  <div>
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.summary[:150] }}...</p>
                  </div>
                  <div class="mt-auto text-end">
                    <a href="{{ article.link }}" target="_blank" class="btn btn-primary" onclick="incrementArticleClick({{ article.title | tojson }})">Read Article</a>
                    <div class="d-flex align-items-center mt-2 justify-content-end">
                      <span class="me-3"><i class="fas fa-eye text-info fa-xs"></i> {{ article.click_count }}</span>
                      <button class="like-btn btn btn-outline-primary me-2" data-type="article" data-id="{{ article.title }}">
                        <i class="{{ 'fas' if article.user_liked else 'far' }} fa-thumbs-up"></i> <span class="like-count">{{ article.likes }}</span>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <footer class="text-center mt-4">
      <p>Total Site Views: {{ total_views }}</p>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function incrementPlay(type, id) {
      fetch('/api/increment_play', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({type: type, id: id})
      }).then(r => r.json()).then(data => console.log('Play updated:', data.count));
    }

    function incrementArticleClick(title) {
      fetch('/api/increment_article_click', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({title: title})
      }).then(r => r.json()).then(data => console.log('Click updated:', data.count));
    }

    document.addEventListener('click', e => {
      if (e.target.closest('.like-btn')) {
        const btn = e.target.closest('.like-btn');
        const type = btn.dataset.type;
        const id = btn.dataset.id;
        fetch('/api/toggle_like', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({type: type, id: id})
        }).then(r => r.json()).then(data => {
          btn.querySelector('i').classList.toggle('fas', data.liked);
          btn.querySelector('i').classList.toggle('far', !data.liked);
          btn.querySelector('.like-count').textContent = data.total;
        });
      }
    });
  </script>
</body>
</html>
