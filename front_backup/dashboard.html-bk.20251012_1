<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>6G Workgroup MCI - Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="{{ url_for('static', filename='app.css') }}">
</head>
<body>
  <!-- Banner -->
  <div class="banner-container">
    <img src="{{ url_for('static', filename='banner.jpg') }}" alt="6G Workgroup MCI Banner" class="banner-image">
    <div class="banner-overlay">
      <!-- Title at bottom left -->
      <div class="banner-title-left">
        <h1>6G Workgroup MCI</h1>
      </div>
      <!-- Navigation at bottom right -->
      <nav class="banner-nav-right">
        <ul class="nav-list">
          <li><a href="/" class="active">Home</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/videos">Videos</a></li>
          <li><a href="/podcasts">Podcasts</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <div class="container mt-4">
    <!-- Videos Section -->
    <div class="row mb-4">
      <div class="col-12">
        <h2>Videos</h2>
        {% for video in videos %}
          <div class="row mb-3">
            <div class="col-12">
              <div class="card">
                <div class="card-body d-flex flex-column align-items-center">
                  <h5 class="card-title">{{ video.title }}</h5>
                  <p class="card-text">{{ video.summary }}</p>
                  <div class="video-container">
                    <video controls>
                      <source src="/videos/{{ video_week }}/{{ video.video_path }}" type="video/mp4">
                      Your browser does not support the video tag.
                    </video>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Podcasts Section -->
    <div class="row mb-4">
      <div class="col-12">
        <h2>Podcasts</h2>
        <div class="row">
          {% for podcast in podcasts %}
            <div class="col-md-6 mb-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">{{ podcast.title }}</h5>
                  <p class="card-text">{{ podcast.summary }}</p>
                  <audio controls class="w-100">
                    <source src="/podcasts/{{ podcast_week }}/{{ podcast.path }}" type="audio/mpeg">
                    Your browser does not support the audio tag.
                  </audio>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Articles.Section -->
    <div class="row">
      <div class="col-12">
        <h2>Articles</h2>
        <div class="row">
          {% for article in articles %}
            <div class="col-md-3 mb-3">
              <div class="card h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                  <div>
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.summary[:150] }}...</p>
                  </div>
                  <div class="mt-auto text-end">
                    <a href="{{ article.link }}" target="_blank" class="btn btn-primary">Read Article</a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
