<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Articles - 6G Workgroup MCI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="{{ url_for('static', filename='app.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="banner-container">
    <img src="{{ url_for('static', filename='banner.jpg') }}" alt="6G Workgroup MCI Banner" class="banner-image">
    <div class="banner-overlay">
      <div class="banner-title-left">
        <h1>6G Workgroup MCI</h1>
      </div>
      <nav class="banner-nav-right">
        <ul class="nav-list">
          <li><a href="/">Home</a></li>
          <li><a href="/articles" class="active">Articles</a></li>
          <li><a href="/videos">Videos</a></li>
          <li><a href="/podcasts">Podcasts</a></li>
          <li><a href="/about">About</a></li>
        </ul+
      </nav>
    </div>
  </div>

  <div class="container mt-4">
    <div class="row g-3">
      <div class="col-md-3 sidebar mb-3 mb-md-0">
        <h3>Select Week</h3>
        {% if weeks %}
          <form method="get">
            <select name="week" class="form-select" onchange="this.form.submit()">
              {% for week in weeks %}
                <option value="{{ week }}" {% if week == selected_week %}selected{% endif %}>{{ week }}</option>
              {% endfor %}
            </select>
          </form>
        {% else %}
          <p>No weeks available</p>
        {% endif %}
      </div>
      <div class="col-md-9">
        <h1 class="mt-3 mt-md-0">Articles for Week {{ selected_week }}</h1>
        {% if articles %}
          <div class="row">
            {% for article in articles %}
              <div class="col-md-6 mb-3">
                <div class="card h-100">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                      <h5 class="card-title">{{ article.title }}</h5>
                      <p class="card-text"><strong>Authors:</strong> {{ article.authors }}</p>
                      <p class="card-text">{{ article.summary }}</p>
                      <h6>Key Points:</h6>
                      <ul>
                        {% for point in article.key_points %}
                          <li>{{ point }}</li>
                        {% endfor %}
                      </ul>
                    </div>
                    <div class="mt-auto text-end">
                      <a href="{{ article.link }}" target="_blank" class="btn btn-primary" onclick="incrementArticleClick({{ article.title | tojson }})">Read Article</a>
                      <div class="d-flex align-items-center mt-2 justify-content-end">
                        <span class="me-3"><i class="fas fa-eye text-info fa-xs"></i> {{ article.click_count }}</span>
                        <button class="like-btn btn btn-outline-primary me-2" data-type="article" data-id="{{ article.title }}">
                          <i class="{{ 'fas' if article.user_liked else 'far' }} fa-thumbs-up"></i> <span class="like-count">{{ article.likes }}</span>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <p>No articles found for week {{ selected_week }}</p>
        {% endif %}
      </div>
    </div>
    <footer class="text-center mt-4">
      <p>Total Site Views: {{ total_views }}</p>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function incrementArticleClick(title) {
      fetch('/api/increment_article_click', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({title: title})
      }).then(r => r.json()).then(data => console.log('Click updated:', data.count));
    }

    document.addEventListener('click', e => {
      if (e.target.closest('.like-btn')) {
        const btn = e.target.closest('.like-btn');
        const type = btn.dataset.type;
        const id = btn.dataset.id;
        fetch('/api/toggle_like', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({type: type, id: id})
        }).then(r => r.json()).then(data => {
          btn.querySelector('i').classList.toggle('fas', data.liked);
          btn.querySelector('i').classList.toggle('far', !data.liked);
          btn.querySelector('.like-count').textContent = data.total;
        });
      }
    });
  </script>
</body>
</html>
